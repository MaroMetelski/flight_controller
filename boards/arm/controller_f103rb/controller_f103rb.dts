/dts-v1/;
#include <st/f1/stm32f103Xb.dtsi>
#include <st/f1/stm32f103r(8-b)tx-pinctrl.dtsi>

/ {
  model = "controller ff103rb";
  compatible = "metelski,controller-f103rb";

  chosen {
    zephyr,sram = &sram0;
    zephyr,flash = &flash0;
    zephyr,console = &usart2;
    zephyr,shell-uart = &usart2;
  };

  aliases {
    led0 = &green_led;
    led1 = &red_led;
  };

  leds {
    compatible = "gpio-leds";
    green_led: led_0 {
      gpios = <&gpioc 10 GPIO_ACTIVE_HIGH>;
      label = "LED green";
    };
    red_led: led_1 {
      gpios = <&gpioc 11 GPIO_ACTIVE_HIGH>;
      label = "LED red";
    };
  };

  motors {
    compatible = "motors";
    status = "okay";
    pwms = <&pwm0 1 100000 PWM_POLARITY_NORMAL>,
           <&pwm0 2 100000 PWM_POLARITY_NORMAL>,
           <&pwm0 3 100000 PWM_POLARITY_NORMAL>,
           <&pwm0 4 100000 PWM_POLARITY_NORMAL>;
  };
};

&timers1 {
  status = "okay";
  pwm0: pwm {
    pinctrl-0 = <&tim1_ch1_pwm_pa8 &tim1_ch2_pwm_pa9
                 &tim1_ch3_pwm_pa10 &tim1_ch4_pwm_pa11>;
    status = "okay";
  };
};

&i2c1 {
  status = "okay";
  pinctrl-0 = <&i2c1_scl_pb8 &i2c1_sda_pb9>;
  clock-frequency = <I2C_BITRATE_STANDARD>;

  mpu6050@68 {
    compatible = "invensense,mpu6050";
    reg = <0x68>;
    status = "okay";
    label = "MPU6050";
  };
};

&adc1 {
  pinctrl-0 = <&adc1_in0_pa0>;
  status = "okay";
};

&usart2 {
  pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
  current-speed = <115200>;
  status = "okay";
};

&clk_hsi {
  status = "okay";
};

&pll {
  mul = <8>;
  clocks = <&clk_hsi>;
  status = "okay";
};

&rcc {
  clocks = <&pll>;
  clock-frequency = <DT_FREQ_M(32)>;
  ahb-prescaler = <1>;
  apb1-prescaler = <1>;
  apb2-prescaler = <1>;
  status = "okay";
};

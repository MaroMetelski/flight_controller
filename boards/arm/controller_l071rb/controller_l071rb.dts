/dts-v1/;
#include <st/l0/stm32l071Xb.dtsi>
#include <st/l0/stm32l071r(b-z)tx-pinctrl.dtsi>

/ {
  model = "controller l071rb";
  compatible = "metelski,controller-l071rb";

  chosen {
    zephyr,sram = &sram0;
    zephyr,flash = &flash0;
    zephyr,console = &usart2;
    zephyr,shell-uart = &usart2;
  };

  aliases {
    led0 = &green_led;
    led1 = &red_led;
  };

  leds {
    compatible = "gpio-leds";
    green_led: led_0 {
      gpios = <&gpioc 10 GPIO_ACTIVE_HIGH>;
      label = "LED green";
    };
    red_led: led_1 {
      gpios = <&gpioc 11 GPIO_ACTIVE_HIGH>;
      label = "LED red";
    };
  };

  bcm_sys0: bcm_sys {
    compatible = "sys-bcm";
    status = "okay";
    label = "BCM_0";
    out-gpios = <&gpioa 8 GPIO_ACTIVE_HIGH>,
                <&gpioa 9 GPIO_ACTIVE_HIGH>;
  };
};

&i2c1 {
  status = "okay";
  pinctrl-0 = <&i2c1_scl_pb8 &i2c1_sda_pb9>;
  clock-frequency = <I2C_BITRATE_STANDARD>;

  mpu6050@68 {
    compatible = "invensense,mpu6050";
    reg = <0x68>;
    status = "okay";
    label = "MPU6050";
  };
};

&adc1 {
  pinctrl-0 = <&adc_in0_pa0>;
  status = "okay";
};

&usart2 {
  pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
  current-speed = <115200>;
  status = "okay";
};

&clk_hsi {
  status = "okay";
};

&pll {
  div = <2>;
  mul = <4>;
  clocks = <&clk_hsi>;
  status = "okay";
};

&rcc {
  clocks = <&pll>;
  clock-frequency= <DT_FREQ_M(32)>;
  ahb-prescaler = <1>;
  apb1-prescaler = <1>;
  apb2-prescaler = <1>;
  status = "okay";
};
